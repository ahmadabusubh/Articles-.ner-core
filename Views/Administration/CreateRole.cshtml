@model Articles.viewModels.createRole

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/_LayoutAdmain.cshtml"; // Assuming you have a layout for admin pages

}
<h2>Create Role</h2>

<form asp-action="CreateRole" method="post">
