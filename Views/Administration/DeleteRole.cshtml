@model Articles.viewModels.DeleteRoleViewModel




<h2>Delete Role</h2>

<p>Are you sure you want to delete the role '@Model.RoleId'?</p>

<form asp-action="DeleteRole" asp-route-id="@Model.RoleId" method="post">
    
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-action="ListRoles" class="btn btn-secondary">Cancel</a>
</form>